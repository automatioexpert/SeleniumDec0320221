<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Suite" verbose="4" thread-count="3"
	parallel="tests">

	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.AnnotationTransformer" />
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
	</listeners>

	<test name="Open Cart Login Page Test - ch - 89">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="89" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Open Cart Login Page Test - ch - 90">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="90" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test>


	<test name="Open Cart Accounts Page Test - ch - 90">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="90" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<test name="Open Cart Accounts Page Test - ch - 89">
		<parameter name="browser" value="chrome" />
		<parameter name="browserversion" value="89" />
		<classes>
			<class name="com.qa.opencart.tests.AccountsPageTest" />
		</classes>
	</test>

	<!-- <test name="Open Cart Product Info Page Test"> <classes> <class name="com.qa.opencart.tests.ProductInfoPageTest" 
		/> </classes> </test> -->


	<!-- <test name="Open Cart Registration Page Test"> <classes> <class name="com.qa.opencart.tests.RegistrationPageTest" 
		/> </classes> </test> -->

</suite>