		</classes>
	</test>
	
	<test name="DragAndDropTests-FF">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.herokuapp.theinternet.draganddroptests.DragAndDropTests" />
		</classes>
	</test>

</suite>
