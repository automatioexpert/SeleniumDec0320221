<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Ebay Test Suite">
	<test name="Ebay Search Test1">

		<parameter name="SearchKeyWord" value="iPad" />
		<parameter name="TotalItemNumber" value="20" />
		<classes>

			<class name="com.qa.ebay.test.EbayTest">
				<methods>
					<include name="ebaySearch_LowerToHigherPriceTest" />
					<include name="ebaySearch_HigherToLowerPriceTest" />
				</methods>
			</class>

		</classes>

	</test>

	<test name="Ebay Search Test2">

		<parameter name="SearchKeyWord" value="iPhone" />
		<parameter name="TotalItemNumber" value="10" />
		<classes>

			<class name="com.qa.ebay.test.EbayTest">
				<methods>
					<include name="ebaySearch_LowerToHigherPriceTest" />
					<include name="ebaySearch_HigherToLowerPriceTest" />
				</methods>
			</class>

		</classes>

	</test>
</suite>